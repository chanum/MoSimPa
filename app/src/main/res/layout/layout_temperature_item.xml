<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CommonRecyclerViewShapeBorder"
    android:id="@+id/layoutTemperatureItem"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_patient_temp_title"
        style="@style/CommonItemTitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/patient_item_temp_title" />

    <TextView
        android:id="@+id/tv_item_patient_temp_value"
        style="@style/CommonItemTitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/patient_item_temp_value" />

</LinearLayout>